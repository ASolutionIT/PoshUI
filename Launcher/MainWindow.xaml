<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        xmlns:controls="clr-namespace:Launcher.Controls"
        xmlns:viewModels="clr-namespace:Launcher.ViewModels"
        xmlns:converters="clr-namespace:Launcher.Converters"
        xmlns:helpers="clr-namespace:Launcher.Helpers"
        xmlns:behaviors="clr-namespace:Launcher.Behaviors"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="720" Width="1080"
        Icon="{Binding WindowTitleIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        Background="{DynamicResource AppBackgroundBrush}"
        BorderThickness="0"
        Topmost="False" MinWidth="800" MinHeight="600" FontSize="{DynamicResource FontSizeBase}">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- CheckBox styled as a toggle switch (Fluent-aligned) -->
        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="BackgroundBorder"
                                    Background="{DynamicResource TextBoxBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Width="40"
                                    Height="20">
                                <Ellipse x:Name="Thumb"
                                         Width="16"
                                         Height="16"
                                         Fill="{DynamicResource BodyForegroundBrush}"
                                         HorizontalAlignment="Left"
                                         Margin="2,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="1" Direction="270" Color="Black" Opacity="0.2" BlurRadius="2"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinning Refresh Button Style -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <TextBlock x:Name="RefreshIcon" 
                                       FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       Foreground="{DynamicResource BodyForegroundBrush}" 
                                       Text="&#xE72C;"
                                       RenderTransformOrigin="0.5,0.5"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <RotateTransform x:Name="RotateTransform" Angle="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RefreshIcon" Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="SpinStoryboard">
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="RotateTransform"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="SpinStoryboard"/>
                                </DataTrigger.ExitActions>
                                <Setter TargetName="RefreshIcon" Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small neutral button style for inline buttons (e.g., path browse) -->
        <Style x:Key="PathBrowseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                <Setter TargetName="BtnBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource IconButtonCheckedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Button Styles -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TitleBarTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Close Button (Red on hover) -->
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#C50F1F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Icon Button (for theme toggle) -->
        <Style x:Key="TitleBarIconButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TitleBarTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="4,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TitleBarButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon-only ToggleButton style used for theme toggle (sun/moon) -->
        <Style x:Key="IconToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                            <!-- When checked, keep background transparent (no shaded box) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Converters -->
        <converters:NullToFalseConverter x:Key="NullToFalseConverter"/>
        <converters:CountToTrueConverter x:Key="CountToTrueConverter"/>
        <converters:NullOrEmptyToFalseConverter x:Key="NullOrEmptyToFalseConverter"/>
        <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter"/>
        <converters:SecureStringToStringConverter x:Key="SecureStringConverter"/>
        <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter"/>
        <converters:RowCountToHeightConverter x:Key="RowCountToHeightConverter"/>
        <converters:ProgressPercentageToWidthConverter x:Key="ProgressPercentageToWidthConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NotNullOrEmptyToVisibilityConverter x:Key="NotNullOrEmptyToVisibilityConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <converters:StringToColorConverter x:Key="StringToColorConverter"/>
        <converters:IntToCornerRadiusConverter x:Key="IntToCornerRadiusConverter"/>
        <converters:GradientBrushConverter x:Key="GradientBrushConverter"/>
        <converters:ValueToHeightConverter x:Key="ValueToHeightConverter"/>
        <converters:ValueToScaledHeightConverter x:Key="ValueToScaledHeightConverter"/>
        <converters:ValuesToPointsConverter x:Key="ValuesToPointsConverter"/>
        <converters:ValuesToPieSlicesConverter x:Key="ValuesToPieSlicesConverter"/>
        <converters:ValuesToDataPointsConverter x:Key="ValuesToDataPointsConverter"/>
        <converters:ValuesToAreaPathConverter x:Key="ValuesToAreaPathConverter"/>

        <!-- Colors are supplied by theme dictionaries (see App.xaml). Use DynamicResource when consuming. -->

        <!-- ═══ ENHANCED PRIMARY BUTTON STYLE ═══ -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeButton}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.02" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.02" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource ButtonDisabledBrush}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══ SECONDARY BUTTON STYLE ═══ -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeButton}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.02" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.02" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource SidebarBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══ ENHANCED TEXTBOX STYLE ═══ -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                     <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                     <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
                     <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for ComboBoxes to honor theme brushes -->
        <Style x:Key="WizardComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="MinWidth" Value="220"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="BackgroundBorder"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"/>

                            <ContentPresenter x:Name="ContentPresenter"
                                              Margin="8,0,28,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>

                            <ToggleButton x:Name="DropDownToggle" Grid.ColumnSpan="2"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,6,0"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent">
                                            <TextBlock Text="&#xE70D;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Grid.ColumnSpan="2"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="{DynamicResource ContentBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        SnapsToDevicePixels="True"
                                        Margin="0,2,0,0">
                                    <ScrollViewer CanContentScroll="True"
                                                  Background="Transparent"
                                                  Padding="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="{DynamicResource SidebarHighlightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource TextBoxDisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact ComboBox style for toolbar - theme-aware -->
        <Style x:Key="ToolbarComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="BackgroundBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"/>
                            <ContentPresenter Margin="6,0,20,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                            <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                       Foreground="{DynamicResource BodyForegroundBrush}"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Margin="0,0,4,0" Opacity="0.7"/>
                            <ToggleButton x:Name="DropDownToggle"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                          Background="Transparent" BorderThickness="0" Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup" Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="{DynamicResource ContentBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="4" Margin="0,2,0,0">
                                    <ScrollViewer CanContentScroll="True" Background="Transparent">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for DatePicker with Fluent calendar icon -->
        <Style x:Key="WizardDatePickerStyle" TargetType="DatePicker">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="CalendarStyle">
                <Setter.Value>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <DatePickerTextBox x:Name="PART_TextBox"
                                                       Grid.Column="0"
                                                       Foreground="{TemplateBinding Foreground}"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       VerticalContentAlignment="Center"
                                                       Focusable="{TemplateBinding Focusable}"/>
                                    
                                    <Button x:Name="PART_Button"
                                            Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="28"
                                            Height="28"
                                            Margin="4,0,0,0"
                                            Focusable="False"
                                            VerticalAlignment="Center">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="ButtonBorder"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="4">
                                                    <TextBlock Text="&#xE787;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource BodyForegroundBrush}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    
                                    <Popup x:Name="PART_Popup"
                                           AllowsTransparency="True"
                                           Placement="Bottom"
                                           PlacementTarget="{Binding ElementName=PART_TextBox}"
                                           StaysOpen="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for CheckBoxes (Fluent-aligned) -->
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="CheckBorder"
                                    Grid.Column="0"
                                    Width="18" Height="18"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,0,8,0">
                                <TextBlock x:Name="CheckMark"
                                           Text="✓"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource BodyForegroundBrush}"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                <Setter TargetName="CheckMark" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

         <!-- Style for Labels -->
         <Style TargetType="TextBlock" x:Key="FormLabelStyle">
              <Setter Property="FontSize" Value="{DynamicResource FontSizeLabel}"/>
              <Setter Property="FontWeight" Value="Medium"/>
              <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
              <Setter Property="Margin" Value="0,0,0,6"/>
         </Style>

         <!-- Style for Mandatory Labels -->
         <Style TargetType="TextBlock" x:Key="WizardParameterLabelStyle" BasedOn="{StaticResource FormLabelStyle}">
             <Setter Property="Text" Value="{Binding Label}"/>
             <Style.Triggers>
                 <!-- Show asterisk when mandatory -->
                 <DataTrigger Binding="{Binding IsMandatory}" Value="True">
                     <Setter Property="Text" Value="{Binding Label, StringFormat={}{0} *}"/>
                 </DataTrigger>
             </Style.Triggers>
         </Style>

        <!-- DataTemplate for Vertical Step Indicator Item -->
        <DataTemplate DataType="{x:Type controls:StepItem}">
             <Grid Margin="0,0,0,15">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="*"/>
                 </Grid.ColumnDefinitions>

                 <!-- Circle Indicator -->
                <Ellipse Grid.Column="0" Width="12" Height="12" StrokeThickness="2" Margin="0,4,12,0" VerticalAlignment="Top">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Stroke" Value="{DynamicResource SidebarTextBrush}"/>
                            <Setter Property="Fill" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                    <Setter Property="Stroke" Value="{DynamicResource SidebarHighlightBrush}"/>
                                    <Setter Property="Fill" Value="{DynamicResource SidebarHighlightBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                 <!-- Connecting Line (simplified) -->
                 <Line Grid.Column="0" X1="6" Y1="18" X2="6" Y2="45" Stroke="{DynamicResource SidebarTextBrush}" StrokeThickness="1" VerticalAlignment="Top" HorizontalAlignment="Left">
                      <Line.Style>
                          <Style TargetType="Line">
                               <Setter Property="Visibility" Value="Visible"/>
                               <Style.Triggers>
                                   <DataTrigger Binding="{Binding ShowConnector}" Value="False">
                                       <Setter Property="Visibility" Value="Collapsed"/>
                                   </DataTrigger>
                               </Style.Triggers>
                          </Style>
                      </Line.Style>
                 </Line>

                 <!-- Step Text -->
                 <StackPanel Grid.Column="1">
                    <TextBlock FontSize="{DynamicResource FontSizeSmall}" Margin="0,0,0,2">
                        <TextBlock.Style>
                             <Style TargetType="TextBlock">
                                 <Setter Property="Text" Value="{Binding StepNumber, StringFormat='Step {0}'}"/>
                                 <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                 <Style.Triggers>
                                     <DataTrigger Binding="{Binding DataContext.ShowStepNumbers, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                         <Setter Property="Visibility" Value="Collapsed"/>
                                     </DataTrigger>
                                     <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                         <Setter Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </TextBlock.Style>
                    </TextBlock>
                     <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeBody}" FontWeight="Medium">
                          <TextBlock.Style>
                             <Style TargetType="TextBlock">
                                 <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                 <Style.Triggers>
                                     <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                         <Setter Property="Foreground" Value="White"/>
                                         <Setter Property="FontWeight" Value="SemiBold"/>
                                     </DataTrigger>
                                 </Style.Triggers>
                             </Style>
                         </TextBlock.Style>
                     </TextBlock>
                 </StackPanel>
             </Grid>
        </DataTemplate>

        <!-- DataTemplate for Error View Model -->
        <DataTemplate DataType="{x:Type viewModels:ErrorViewModel}">
            <Border BorderBrush="Red" BorderThickness="1" Margin="0" Padding="20" Background="#FFF0F0">
                <StackPanel>
                    <TextBlock Text="Error" FontSize="{DynamicResource FontSizeHeading}" FontWeight="Bold" Foreground="Red" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- DataTemplate for Card View Model (Reusable Card Control) - Enhanced with image, link, icon support -->
        <DataTemplate DataType="{x:Type viewModels:CardViewModel}">
            <Border Padding="20" CornerRadius="{Binding CornerRadius}" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Image (if provided) -->
                    <Image Grid.Row="0" Source="{Binding ImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                           Height="{Binding ImageHeight}" Opacity="{Binding ImageOpacity}" Stretch="UniformToFill" Margin="0,0,0,10"
                           HorizontalAlignment="Stretch">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ImagePath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    
                    <!-- Title with optional icon -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Width="32" Height="32" Margin="0,0,10,0" BorderBrush="Red" BorderThickness="1"
                                Visibility="{Binding IconPath, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                            <Image Source="{Binding IconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                   Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource HeadingForegroundBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Content -->
                    <TextBox Grid.Row="2" Text="{Binding Content, Mode=OneWay}" 
                             FontSize="{DynamicResource FontSizeBody}" 
                             TextWrapping="Wrap" 
                             Foreground="{DynamicResource BodyForegroundBrush}"
                             Background="Transparent"
                             BorderThickness="0"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Cursor="Arrow"/>
                    
                    <!-- Link (if provided) -->
                    <TextBlock Grid.Row="3" Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClickable}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{Binding LinkUrl}"
                                   Foreground="{DynamicResource AccentBrush}">
                            <TextBlock Text="{Binding LinkText, TargetNullValue='Learn more...'}"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- DataTemplate for Banner View Model -->
        <DataTemplate DataType="{x:Type viewModels:BannerViewModel}">
            <Border CornerRadius="{Binding CornerRadius, Converter={StaticResource IntToCornerRadiusConverter}}" 
                    Margin="0,0,0,20" ClipToBounds="True" 
                    Height="{Binding Height}"
                    Background="{Binding BackgroundColor, Converter={StaticResource StringToBrushConverter}}">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <!-- Gradient Background (if provided) -->
                    <Border CornerRadius="{Binding CornerRadius, Converter={StaticResource IntToCornerRadiusConverter}}"
                            Visibility="{Binding GradientStart, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource GradientBrushConverter}">
                                <Binding Path="GradientStart"/>
                                <Binding Path="GradientEnd"/>
                                <Binding Path="GradientAngle"/>
                            </MultiBinding>
                        </Border.Background>
                    </Border>
                    
                    <!-- Background Image (if provided) -->
                    <Image Source="{Binding BackgroundImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                           Stretch="UniformToFill" Opacity="{Binding BackgroundImageOpacity}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BackgroundImagePath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- Content -->
                    <Grid Margin="32,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}" TextWrapping="Wrap" 
                                       FontSize="{Binding TitleFontSize}" FontWeight="{Binding TitleFontWeight}" 
                                       Foreground="{Binding TitleColor, Converter={StaticResource StringToBrushConverter}}"/>
                            <TextBlock Text="{Binding Subtitle}" TextWrapping="Wrap" Margin="0,8,0,0" 
                                       FontSize="{Binding SubtitleFontSize}" 
                                       Foreground="{Binding SubtitleColor, Converter={StaticResource StringToBrushConverter}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Subtitle, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Icon (if provided) -->
                        <TextBlock Grid.Column="1" Text="{Binding IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                   FontSize="{Binding IconSize}" 
                                   Foreground="{Binding IconColor, Converter={StaticResource StringToBrushConverter}}" 
                                   VerticalAlignment="Center" Margin="24,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Updated DataTemplate for Generic Form View Model -->
        <DataTemplate DataType="{x:Type viewModels:GenericFormViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="0,0,20,0"
                          controls:ScrollResetBehavior.ResetOnDataContextChange="True">
                 <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" Margin="0,0,0,25" FontWeight="SemiBold" Foreground="{DynamicResource HeadingForegroundBrush}"/>
                    
                    <!-- Display Banners (if any) - uses existing BannerViewModel template -->
                    <ItemsControl ItemsSource="{Binding Banners}" Margin="0,0,0,10"/>
                    
                    <!-- Display Additional Cards (if any) with icon support -->
                    <ItemsControl ItemsSource="{Binding AdditionalCards}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="20" CornerRadius="{Binding CornerRadius, Converter={StaticResource IntToCornerRadiusConverter}}" 
                                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20" ClipToBounds="True"
                                        MinHeight="80">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                            <Style.Triggers>
                                                <!-- Gradient takes highest priority -->
                                                <DataTrigger Binding="{Binding GradientStart, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </DataTrigger>
                                                <!-- Background color takes priority over theme -->
                                                <DataTrigger Binding="{Binding BackgroundColor, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                    <Setter Property="Background" Value="{Binding BackgroundColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                                    </Border.Effect>
                                    <Grid>
                                        <!-- Gradient Background (if provided) -->
                                        <Border Margin="-20" CornerRadius="{Binding CornerRadius, Converter={StaticResource IntToCornerRadiusConverter}}"
                                                Visibility="{Binding GradientStart, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                                            <Border.Background>
                                                <MultiBinding Converter="{StaticResource GradientBrushConverter}">
                                                    <Binding Path="GradientStart"/>
                                                    <Binding Path="GradientEnd"/>
                                                </MultiBinding>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- Background Image (if provided) -->
                                        <Image Source="{Binding ImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                               Stretch="UniformToFill" Opacity="{Binding ImageOpacity}" Margin="-20"
                                               Visibility="{Binding ImagePath, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}"/>
                                        
                                        <StackPanel>
                                            <!-- Title row with optional icon -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10"
                                                        Visibility="{Binding Title, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                                                <!-- Icon Glyph (Segoe MDL2) -->
                                                <TextBlock Text="{Binding IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                                           FontSize="32" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource HeadingForegroundBrush}"/>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <!-- Show if IconGlyph is present -->
                                                                <DataTrigger Binding="{Binding IconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <!-- Hide if IconPath is also present (prefer image over glyph) -->
                                                                <DataTrigger Binding="{Binding IconPath, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}" Value="Visible">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <!-- Use TitleColor if specified, otherwise use theme color -->
                                                                <DataTrigger Binding="{Binding TitleColor, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                    <Setter Property="Foreground" Value="{Binding TitleColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <!-- Icon Path (Image file) -->
                                                <Image Source="{Binding IconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                                       Width="32" Height="32" Margin="0,0,10,0" Stretch="Uniform"
                                                       Visibility="{Binding IconPath, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding Title}" FontSize="{DynamicResource FontSizeHeading}" FontWeight="SemiBold" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource HeadingForegroundBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TitleColor, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                    <Setter Property="Foreground" Value="{Binding TitleColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <!-- Content -->
                                            <TextBox Text="{Binding Content, Mode=OneWay}" 
                                                     FontSize="{DynamicResource FontSizeBody}" 
                                                     TextWrapping="Wrap" 
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     IsReadOnly="True"
                                                     IsTabStop="False"
                                                     Cursor="Arrow"
                                                     Visibility="{Binding Content, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ContentColor, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                <Setter Property="Foreground" Value="{Binding ContentColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <!-- Link (if provided) -->
                                            <TextBlock Margin="0,10,0,0" Visibility="{Binding LinkUrl, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                                                <Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{Binding LinkUrl}"
                                                           Foreground="{DynamicResource AccentBrush}">
                                                    <TextBlock Text="{Binding LinkText, TargetNullValue='Learn more...'}"/>
                                                </Hyperlink>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Display Parameters (form fields) wrapped in card -->
                    <Border Padding="20" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                        </Border.Effect>
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Style="{StaticResource WizardParameterLabelStyle}" Margin="0,0,0,8"/>

                                        <ContentPresenter Grid.Row="1" Content="{Binding}">
                                        <ContentPresenter.Style>
                                            <Style TargetType="ContentPresenter">
                                                <!-- Default Template: TextBox -->
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                     Width="{Binding ControlWidth, FallbackValue=600}"
                                                                     HorizontalAlignment="Left"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <!-- Password field: use custom WinFormsPasswordBox with converter -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPassword}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <controls:WinFormsPasswordBox
                                                                        Password="{Binding SecureValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SecureStringConverter}}"
                                                                        Width="{Binding ControlWidth, FallbackValue=600}"
                                                                        HorizontalAlignment="Left"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Numeric spinner control -->
                                                    <DataTrigger Binding="{Binding IsNumeric}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <Grid Width="{Binding ControlWidth, FallbackValue=240}" HorizontalAlignment="Left">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBox Grid.Column="0"
                                                                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"
                                                                                 VerticalContentAlignment="Center"
                                                                                 Margin="0,0,6,0"/>
                                                                        <Button Grid.Column="1"
                                                                                Command="{Binding IncrementNumericCommand}"
                                                                                Width="32"
                                                                                Height="32"
                                                                                Margin="0,0,4,0"
                                                                                ToolTip="Increase"
                                                                                Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                                BorderThickness="1">
                                                                            <TextBlock Text="▲" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                                                        </Button>
                                                                        <Button Grid.Column="2"
                                                                                Command="{Binding DecrementNumericCommand}"
                                                                                Width="32"
                                                                                Height="32"
                                                                                ToolTip="Decrease"
                                                                                Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                                BorderThickness="1">
                                                                            <TextBlock Text="▼" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                                                        </Button>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Date picker -->
                                                    <DataTrigger Binding="{Binding IsDate}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <DatePicker SelectedDate="{Binding DateValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Null}}"
                                                                                Width="{Binding ControlWidth, FallbackValue=240}"
                                                                                HorizontalAlignment="Left"
                                                                                SelectedDateFormat="Short"
                                                                                Style="{StaticResource WizardDatePickerStyle}"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Option group (radio buttons) -->
                                                    <DataTrigger Binding="{Binding IsOptionGroup}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ItemsControl ItemsSource="{Binding OptionItems}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="{Binding OptionGroupOrientation}"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <RadioButton Content="{Binding Value}"
                                                                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                                             GroupName="{Binding DataContext.Name, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                                             Margin="0,0,18,8"
                                                                                             Foreground="{DynamicResource BodyForegroundBrush}"
                                                                                             FontSize="{DynamicResource FontSizeBody}"/>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Multi-line text -->
                                                    <DataTrigger Binding="{Binding IsMultiLineText}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             HorizontalAlignment="Left"
                                                                             VerticalContentAlignment="Top"
                                                                             AcceptsReturn="True"
                                                                             TextWrapping="Wrap"
                                                                             VerticalScrollBarVisibility="Auto"
                                                                             Height="{Binding MultiLineRows, Converter={StaticResource RowCountToHeightConverter}}"
                                                                             SpellCheck.IsEnabled="True"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <!-- Trigger for Boolean: CheckBox (but NOT a switch) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ParameterType}" Value="{x:Type system:Boolean}"/>
                                                            <Condition Binding="{Binding IsSwitch}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <CheckBox IsChecked="{Binding BoolValue, UpdateSourceTrigger=PropertyChanged}"
                                                                              HorizontalAlignment="Left"
                                                                              IsThreeState="False"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    <!-- Trigger for Switch: Use styled ToggleButton -->
                                                    <DataTrigger Binding="{Binding IsSwitch}" Value="True">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <CheckBox Style="{StaticResource ToggleCheckBoxStyle}"
                                                                              IsChecked="{Binding BoolValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=False}"
                                                                              HorizontalAlignment="Left"/>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    
                                                    <!-- Trigger for ListBox (single-select) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="True"/>
                                                            <Condition Binding="{Binding IsMultiSelect}" Value="False"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding IsOptionGroup}" Value="False"/>
                                                            <Condition Binding="{Binding IsNumeric}" Value="False"/>
                                                            <Condition Binding="{Binding IsDate}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ListBox ItemsSource="{Binding Choices}"
                                                                             SelectedItem="{Binding Value, Mode=TwoWay}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             MinHeight="150"
                                                                             MaxHeight="280"
                                                                             HorizontalAlignment="Left"
                                                                             Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                                             BorderThickness="1"
                                                                             Padding="0"
                                                                             SelectionMode="Single">
                                                                        <ListBox.ItemContainerStyle>
                                                                            <Style TargetType="ListBoxItem">
                                                                                <Setter Property="Padding" Value="16,10"/>
                                                                                <Setter Property="Margin" Value="0"/>
                                                                                <Setter Property="Background" Value="Transparent"/>
                                                                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                                                        <Setter Property="Foreground" Value="White"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ListBox.ItemContainerStyle>
                                                                    </ListBox>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- Trigger for ListBox (multi-select with Ctrl/Shift+Click) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="True"/>
                                                            <Condition Binding="{Binding IsMultiSelect}" Value="True"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ListBox ItemsSource="{Binding Choices}"
                                                                             behaviors:ListBoxSelectionBehavior.SelectedItems="{Binding SelectedItems}"
                                                                             Width="{Binding ControlWidth, FallbackValue=600}"
                                                                             MinHeight="150"
                                                                             MaxHeight="280"
                                                                             HorizontalAlignment="Left"
                                                                             Background="{DynamicResource TextBoxBackgroundBrush}"
                                                                             BorderBrush="{DynamicResource BorderBrush}"
                                                                             BorderThickness="1"
                                                                             Padding="0"
                                                                             SelectionMode="Extended">
                                                                        <ListBox.ItemContainerStyle>
                                                                            <Style TargetType="ListBoxItem">
                                                                                <Setter Property="Padding" Value="16,10"/>
                                                                                <Setter Property="Margin" Value="0"/>
                                                                                <Setter Property="Background" Value="Transparent"/>
                                                                                <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                                                        <Setter Property="Foreground" Value="White"/>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </ListBox.ItemContainerStyle>
                                                                    </ListBox>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- Trigger for ValidateSet/CSV: ComboBox (if NOT ListBox) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsListBox}" Value="False"/>
                                                            <Condition Binding="{Binding Choices, Converter={StaticResource NullToFalseConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding Choices.Count, Converter={StaticResource CountToTrueConverter}}" Value="True"/>
                                                            <Condition Binding="{Binding IsOptionGroup}" Value="False"/>
                                                            <Condition Binding="{Binding IsMultiLineText}" Value="False"/>
                                                            <Condition Binding="{Binding IsNumeric}" Value="False"/>
                                                            <Condition Binding="{Binding IsDate}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <ComboBox 
                                                                        ItemsSource="{Binding Choices}" 
                                                                        SelectedItem="{Binding Value, Mode=TwoWay}"
                                                                        Width="{Binding ControlWidth, FallbackValue=234}"
                                                                        MinWidth="216"
                                                                        HorizontalAlignment="Left"
                                                                        Margin="0,0,40,0"
                                                                        Style="{StaticResource WizardComboBoxStyle}" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                    <!-- NEW Trigger for File/Folder Path Selector -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <!-- Check if PathType is File OR Folder -->
                                                            <Condition Binding="{Binding PathType}" Value="File"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                                    <DockPanel LastChildFill="True">
                                                                        <Button 
                                                                                DockPanel.Dock="Right" 
                                                                                Command="{Binding BrowsePathCommand}" 
                                                                                Style="{StaticResource PathBrowseButtonStyle}"
                                                                                Margin="6,0,0,0" VerticalAlignment="Center"
                                                                                ToolTip="Browse for file">
                                                                            <TextBlock Text="..." FontWeight="Bold" FontSize="16"/>
                                                                        </Button>
                                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"
                                                                                 MinHeight="36"/>
                                                                    </DockPanel>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PathType}" Value="Folder"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate DataType="{x:Type viewModels:ParameterViewModel}">
                                                                    <DockPanel LastChildFill="True">
                                                                        <Button 
                                                                                DockPanel.Dock="Right" 
                                                                                Command="{Binding BrowsePathCommand}" 
                                                                                Style="{StaticResource PathBrowseButtonStyle}"
                                                                                Margin="6,0,0,0" VerticalAlignment="Center"
                                                                                ToolTip="Browse for folder">
                                                                            <TextBlock Text="..." FontWeight="Bold" FontSize="16"/>
                                                                        </Button>
                                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                                 HorizontalAlignment="Stretch"
                                                                                 MinHeight="36"/>
                                                                    </DockPanel>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiDataTrigger>
                                                    
                                                </Style.Triggers>
                                            </Style>
                                        </ContentPresenter.Style>
                                    </ContentPresenter>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <!-- DataTemplate for Workflow View (Timeline style) -->
        <DataTemplate DataType="{x:Type viewModels:WorkflowViewModel}">
            <Grid Margin="40,20,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title -->
                <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="32" FontWeight="Bold"
                           Foreground="{DynamicResource TitleForegroundBrush}" Margin="0,0,0,8"/>
                
                <!-- Overall Progress Bar -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Overall Progress" FontSize="13" Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7"/>
                        <TextBlock Text=" - " Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7"/>
                        <TextBlock Text="{Binding ProgressText}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource SidebarHighlightBrush}"/>
                    </StackPanel>
                    <Border Grid.Row="1" Height="6" CornerRadius="3" Background="{DynamicResource SidebarBackgroundBrush}">
                        <Border CornerRadius="3" Background="{DynamicResource SidebarHighlightBrush}" HorizontalAlignment="Left">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource ProgressPercentageToWidthConverter}">
                                    <Binding Path="OverallProgress"/>
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                    </Border>
                </Grid>
                
                <!-- Task List with Timeline -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="44"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Timeline connector -->
                                    <Grid Grid.Column="0">
                                        <Border Width="2" Background="{DynamicResource BorderBrush}" HorizontalAlignment="Center"/>
                                        <Ellipse Width="28" Height="28" Fill="{DynamicResource AppBackgroundBrush}" 
                                                 Stroke="{Binding StatusColor}" StrokeThickness="3"
                                                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding StatusIcon}" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                   Foreground="{Binding StatusColor}" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Top" Margin="0,17,0,0"/>
                                    </Grid>
                                    
                                    <!-- Task card -->
                                    <Border Grid.Column="1" Margin="8,4,0,16" Padding="16" CornerRadius="10"
                                            Background="{DynamicResource CardBackgroundBrush}">
                                        <StackPanel>
                                            <!-- Header with title and status badge -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="15" 
                                                           Foreground="{DynamicResource BodyForegroundBrush}"/>
                                                <Border Grid.Column="1" CornerRadius="4" Padding="10,3" Background="{Binding StatusBadgeBackground}">
                                                    <TextBlock Text="{Binding StatusText}" FontSize="11" FontWeight="SemiBold" 
                                                               Foreground="{Binding StatusBadgeForeground}"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Description -->
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="13"
                                                       Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7" Margin="0,6,0,0"
                                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Progress Bar (visible when running) -->
                                            <StackPanel Margin="0,12,0,0"
                                                        Visibility="{Binding ShowProgressBar, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Indeterminate progress bar (auto-progress) -->
                                                    <ProgressBar Grid.Column="0" Height="6" IsIndeterminate="True" Margin="0,0,12,0"
                                                                 Background="{DynamicResource SidebarBackgroundBrush}"
                                                                 Foreground="{DynamicResource SidebarHighlightBrush}"
                                                                 Visibility="{Binding IsIndeterminate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    
                                                    <!-- Determinate progress bar (explicit progress) -->
                                                    <Border Grid.Column="0" Height="6" CornerRadius="3" Background="{DynamicResource SidebarBackgroundBrush}" Margin="0,0,12,0"
                                                            Visibility="{Binding IsIndeterminate, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                        <Border CornerRadius="3" Background="{DynamicResource SidebarHighlightBrush}" HorizontalAlignment="Left">
                                                            <Border.Width>
                                                                <MultiBinding Converter="{StaticResource ProgressPercentageToWidthConverter}">
                                                                    <Binding Path="ProgressPercent"/>
                                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                                </MultiBinding>
                                                            </Border.Width>
                                                        </Border>
                                                    </Border>
                                                    
                                                    <!-- Percentage text (hidden for indeterminate) -->
                                                    <TextBlock Grid.Column="1" Text="{Binding ProgressPercent, StringFormat={}{0}%}"
                                                               FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource SidebarHighlightBrush}"
                                                               VerticalAlignment="Center" MinWidth="35" TextAlignment="Right"
                                                               Visibility="{Binding IsIndeterminate, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                    <TextBlock Grid.Column="1" Text="Running..."
                                                               FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource SidebarHighlightBrush}"
                                                               VerticalAlignment="Center" MinWidth="35" TextAlignment="Right"
                                                               Visibility="{Binding IsIndeterminate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </Grid>
                                                <TextBlock Text="{Binding ProgressMessage}" FontSize="12" Margin="0,6,0,0"
                                                           Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <!-- Output Log Panel (expandable) -->
                                            <Expander Margin="0,8,0,0" IsExpanded="{Binding IsExpanded}"
                                                      Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Expander.Header>
                                                    <TextBlock Text="Output Log" FontSize="11" Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7"/>
                                                </Expander.Header>
                                                <Border Background="{DynamicResource TextBoxBackgroundBrush}" CornerRadius="4" Padding="8" Margin="0,4,0,0" MaxHeight="120">
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <ItemsControl ItemsSource="{Binding OutputLines}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" 
                                                                               Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.8" TextWrapping="Wrap"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </Border>
                                            </Expander>
                                            
                                            <!-- Error message for failed task -->
                                            <TextBlock Text="{Binding ErrorMessage}" FontSize="12" Margin="0,8,0,0"
                                                       Foreground="#FF6B6B" TextWrapping="Wrap"
                                                       Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Approval Gate UI -->
                                            <StackPanel Margin="0,12,0,0"
                                                        Visibility="{Binding IsAwaitingApproval, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="{Binding ApprovalMessage}" TextWrapping="Wrap" FontSize="12"
                                                           Foreground="{DynamicResource BodyForegroundBrush}" Margin="0,0,0,8"/>
                                                
                                                <!-- Reason TextBox (visible when RequireReason is true) -->
                                                <StackPanel Margin="0,0,0,8" Visibility="{Binding RequireReason, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Reason (required):" FontSize="11" Foreground="{DynamicResource BodyForegroundBrush}" 
                                                               Opacity="0.7" Margin="0,0,0,4"/>
                                                    <TextBox Text="{Binding RejectionReason, UpdateSourceTrigger=PropertyChanged}" 
                                                             MinHeight="50" TextWrapping="Wrap" AcceptsReturn="True"
                                                             Background="{DynamicResource TextBoxBackgroundBrush}"
                                                             Foreground="{DynamicResource BodyForegroundBrush}"
                                                             BorderBrush="{DynamicResource BorderBrush}"/>
                                                </StackPanel>
                                                
                                                <!-- Timeout indicator -->
                                                <TextBlock Visibility="{Binding HasTimeout, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           FontSize="11" Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.6" Margin="0,0,0,8">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="Timeout: {0} minutes">
                                                            <Binding Path="TimeoutMinutes"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Content="{Binding RejectButtonText}" Command="{Binding RejectCommand}"
                                                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" MinWidth="80"/>
                                                    <Button Content="{Binding ApproveButtonText}" Command="{Binding ApproveCommand}"
                                                            Style="{StaticResource PrimaryButtonStyle}" MinWidth="80"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Reboot Pending Message -->
                <Border Grid.Row="3" Margin="0,16,0,16" Padding="16" CornerRadius="8"
                        Background="#2D3A4A" BorderBrush="#FF9800" BorderThickness="1"
                        Visibility="{Binding IsRebootPending, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="24" 
                                   Foreground="#FF9800" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="System Reboot Required" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#FF9800"/>
                            <TextBlock Text="{Binding RebootReason}" FontSize="12" 
                                       Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.8"
                                       TextWrapping="Wrap" MaxWidth="500"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Footer with elapsed time and task count -->
                <Grid Grid.Row="4" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- Elapsed time -->
                        <TextBlock Text="&#xE121;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                   Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Elapsed: " FontSize="12" Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ElapsedTimeText}" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource BodyForegroundBrush}" VerticalAlignment="Center" Margin="0,0,24,0"/>
                        
                        <!-- Task count -->
                        <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                   Foreground="{DynamicResource SidebarHighlightBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource SidebarHighlightBrush}" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1} tasks">
                                    <Binding Path="CompletedTaskCount" FallbackValue="0"/>
                                    <Binding Path="Tasks.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                        <!-- View Logs Button -->
                        <Button Command="{Binding ViewLogsCommand}" Margin="24,0,0,0" Cursor="Hand"
                                Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                           Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="View Logs" FontSize="12" Foreground="{DynamicResource BodyForegroundBrush}" 
                                           Opacity="0.7" VerticalAlignment="Center" TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Action Buttons (normal mode) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                Visibility="{Binding IsRebootPending, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Button Content="Start" Command="{Binding StartCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" MinWidth="100" Margin="0,0,8,0"
                                Visibility="{Binding CanStart, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" MinWidth="100"/>
                    </StackPanel>
                    
                    <!-- Reboot Buttons (when reboot is pending) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                Visibility="{Binding IsRebootPending, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Command="{Binding SimulateRebootCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" MinWidth="140" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Simulate (Close Only)" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding RebootNowCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" MinWidth="120">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Reboot Now" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </DataTemplate>

        <!-- DataTemplate for CardGrid View -->
        <DataTemplate DataType="{x:Type viewModels:CardGridViewModel}">
            <Grid Margin="0">
                <!-- Cards WrapPanel - simplified, category filter is in title bar -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding FilteredAllCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Resources>
                            <!-- MetricCard Template -->
                            <DataTemplate DataType="{x:Type viewModels:MetricCardViewModel}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="8" Padding="16"
                                        MinWidth="200" MinHeight="120"
                                        behaviors:ResizableBehavior.IsResizable="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Title and Icon -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"
                                                       Foreground="{DynamicResource SidebarHighlightBrush}"/>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="12"
                                                       Foreground="{DynamicResource BodyForegroundBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Refresh Button -->
                                        <Button Grid.Row="0" Grid.Column="1" 
                                                Command="{Binding RefreshCommand}"
                                                Visibility="{Binding CanRefresh, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                ToolTip="Refresh this card"
                                                Style="{StaticResource RefreshButtonStyle}"
                                                VerticalAlignment="Top"/>
                                        
                                        <!-- Value and Trend -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8,0,4">
                                            <TextBlock Text="{Binding FormattedValue}" FontSize="28" FontWeight="Light"
                                                       Foreground="{DynamicResource SidebarHighlightBrush}"/>
                                            <!-- Trend Indicator -->
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0"
                                                        Visibility="{Binding ShowTrend, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"
                                                           Foreground="{Binding TrendColor}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="&#xE74A;"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Trend}" Value="up">
                                                                    <Setter Property="Text" Value="&#xE74A;"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Trend}" Value="down">
                                                                    <Setter Property="Text" Value="&#xE74B;"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Trend}" Value="stable">
                                                                    <Setter Property="Text" Value="&#xE72A;"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding FormattedTrendValue}" FontSize="12" VerticalAlignment="Center" Margin="4,0,0,0"
                                                           Foreground="{Binding TrendColor}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                   Text="{Binding Description}" FontSize="10" Opacity="0.7"
                                                   Foreground="{DynamicResource BodyForegroundBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            <!-- GraphCard Template - Multiple chart types -->
                            <DataTemplate DataType="{x:Type viewModels:GraphCardViewModel}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="8" Padding="12"
                                        MinWidth="300" MinHeight="200"
                                        behaviors:ResizableBehavior.IsResizable="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Header with Refresh Button -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13"
                                                           Foreground="{DynamicResource BodyForegroundBrush}"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" Opacity="0.7"
                                                           Foreground="{DynamicResource BodyForegroundBrush}" Margin="0,2,0,0"/>
                                            </StackPanel>
                                            <!-- Refresh Button -->
                                            <Button Grid.Column="1" 
                                                    Command="{Binding RefreshCommand}"
                                                    Visibility="{Binding CanRefresh, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    ToolTip="Refresh chart data"
                                                    Style="{StaticResource RefreshButtonStyle}"
                                                    VerticalAlignment="Top"/>
                                        </Grid>
                                        
                                        <!-- Chart area -->
                                        <Border Grid.Row="1" Background="{DynamicResource ChartBackgroundBrush}" CornerRadius="4" Padding="16">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasData}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <!-- BAR CHART with axes and data labels -->
                                                <Grid Visibility="{Binding ChartType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Bar}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <!-- Y-Axis labels (dynamic) -->
                                                    <ItemsControl Grid.Column="0" Grid.Row="0" ItemsSource="{Binding YAxisLabels}" 
                                                                  VerticalAlignment="Stretch" Margin="0,0,5,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="5"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                                                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    
                                                    <!-- Chart area with grid lines - responsive -->
                                                    <Grid Grid.Column="1" Grid.Row="0" MinHeight="100">
                                                        <!-- Grid lines using ItemsControl for responsive layout -->
                                                        <ItemsControl VerticalAlignment="Stretch">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <UniformGrid Rows="5"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,0.5" Opacity="0.3"/>
                                                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,0.5" Opacity="0.3"/>
                                                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,0.5" Opacity="0.3"/>
                                                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,0.5" Opacity="0.3"/>
                                                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Opacity="0.5"/>
                                                        </ItemsControl>
                                                        
                                                        <!-- Bars with value labels - responsive using UniformGrid -->
                                                        <ItemsControl ItemsSource="{Binding ChartBars}" 
                                                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="4,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <UniformGrid Rows="1"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid VerticalAlignment="Stretch" Margin="2,0"
                                                                          ToolTip="{Binding Value, StringFormat=Value: {0}}">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="*"/>
                                                                        </Grid.RowDefinitions>
                                                                        <!-- Value label above bar -->
                                                                        <TextBlock Grid.Row="0" Text="{Binding Value}" 
                                                                                   Foreground="{DynamicResource BodyForegroundBrush}" 
                                                                                   FontSize="9" FontWeight="SemiBold"
                                                                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                                                        <!-- Bar container that stretches -->
                                                                        <Grid Grid.Row="1" VerticalAlignment="Stretch">
                                                                            <!-- Bar with pre-calculated height and hover effect -->
                                                                            <Rectangle VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
                                                                                       MaxWidth="40" MinWidth="16"
                                                                                       Height="{Binding ScaledHeight, FallbackValue=50}"
                                                                                       Fill="{Binding Color, Converter={StaticResource StringToBrushConverter}}"
                                                                                       RadiusX="3" RadiusY="3" Cursor="Hand"
                                                                                       RenderTransformOrigin="0.5,1">
                                                                                <Rectangle.RenderTransform>
                                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                                </Rectangle.RenderTransform>
                                                                                <Rectangle.Style>
                                                                                    <Style TargetType="Rectangle">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Opacity" Value="0.8"/>
                                                                                                <Setter Property="RenderTransform">
                                                                                                    <Setter.Value>
                                                                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.02"/>
                                                                                                    </Setter.Value>
                                                                                                </Setter>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Rectangle.Style>
                                                                            </Rectangle>
                                                                        </Grid>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                    
                                                    <!-- X-Axis labels -->
                                                    <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding ChartBars}" 
                                                                  HorizontalAlignment="Stretch" Margin="4,4,4,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="1"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Label}" TextAlignment="Center" TextTrimming="CharacterEllipsis"
                                                                           Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"
                                                                           HorizontalAlignment="Center" Margin="2,0"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                                
                                                <!-- LINE CHART with axes, grid, and data points -->
                                                <Grid Visibility="{Binding ChartType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Line}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <!-- Y-Axis labels (dynamic) -->
                                                    <ItemsControl Grid.Column="0" Grid.Row="0" ItemsSource="{Binding YAxisLabels}" 
                                                                  VerticalAlignment="Stretch" Margin="0,0,5,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="5"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                                                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    
                                                    <!-- Chart area with grid lines and line - wrapped in Viewbox for responsive scaling -->
                                                    <Viewbox Grid.Column="1" Grid.Row="0" Stretch="Uniform" StretchDirection="Both" MaxHeight="180">
                                                        <Grid Width="280" Height="140" ClipToBounds="True">
                                                            <!-- Grid lines -->
                                                            <Canvas Width="280" Height="140">
                                                                <Line X1="0" Y1="0" X2="280" Y2="0" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="28" X2="280" Y2="28" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="56" X2="280" Y2="56" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="84" X2="280" Y2="84" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="112" X2="280" Y2="112" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="140" X2="280" Y2="140" Stroke="{DynamicResource BorderBrush}" StrokeThickness="1" Opacity="0.5"/>
                                                            </Canvas>
                                                        
                                                            <!-- Line with area fill -->
                                                            <Canvas Width="280" Height="140">
                                                                <!-- Area fill under line -->
                                                                <Path Data="{Binding ChartValues, Converter={StaticResource ValuesToAreaPathConverter}}" 
                                                                      Fill="{Binding ChartColorBrush}" Opacity="0.15"/>
                                                                <!-- Main line -->
                                                                <Polyline Stroke="{Binding ChartColorBrush}" StrokeThickness="3" StrokeLineJoin="Round"
                                                                          Points="{Binding ChartValues, Converter={StaticResource ValuesToPointsConverter}}"/>
                                                                <!-- Data point dots with uniform chart color -->
                                                                <ItemsControl ItemsSource="{Binding ChartValues, Converter={StaticResource ValuesToDataPointsConverter}}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <Canvas/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemContainerStyle>
                                                                        <Style TargetType="ContentPresenter">
                                                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                                                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                                                        </Style>
                                                                    </ItemsControl.ItemContainerStyle>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Ellipse Width="10" Height="10" Margin="-5,-5,0,0"
                                                                                     Fill="{Binding DataContext.ChartColorBrush, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                                     Stroke="White" StrokeThickness="2"
                                                                                     Cursor="Hand" ToolTip="{Binding TooltipText}">
                                                                                <Ellipse.Effect>
                                                                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.3"/>
                                                                                </Ellipse.Effect>
                                                                                <Ellipse.Style>
                                                                                    <Style TargetType="Ellipse">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Width" Value="14"/>
                                                                                                <Setter Property="Height" Value="14"/>
                                                                                                <Setter Property="Margin" Value="-7,-7,0,0"/>
                                                                                                <Setter Property="Opacity" Value="0.8"/>
                                                                                                <Setter Property="Effect">
                                                                                                    <Setter.Value>
                                                                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                                                                                                    </Setter.Value>
                                                                                                </Setter>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Ellipse.Style>
                                                                            </Ellipse>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </Canvas>
                                                        </Grid>
                                                    </Viewbox>
                                                    
                                                    <!-- X-Axis labels -->
                                                    <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding ChartLabels}" 
                                                                  HorizontalAlignment="Stretch" Margin="20,4,20,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="1"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" TextAlignment="Center"
                                                                           Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                                
                                                <!-- PIE CHART with values and legend -->
                                                <Grid Visibility="{Binding ChartType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Pie}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Pie chart visual with data-driven slices -->
                                                    <Grid Grid.Column="0" HorizontalAlignment="Center">
                                                        <Viewbox Width="130" Height="130" Stretch="Uniform">
                                                            <Canvas Width="100" Height="100">
                                                                <!-- Data-driven pie slices -->
                                                                <ItemsControl ItemsSource="{Binding ChartValues, Converter={StaticResource ValuesToPieSlicesConverter}}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <Canvas/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Path Data="{Binding Geometry}" Fill="{Binding Color}" Cursor="Hand"
                                                                                  ToolTip="{Binding TooltipText}">
                                                                                <Path.RenderTransform>
                                                                                    <ScaleTransform CenterX="50" CenterY="50" ScaleX="1" ScaleY="1"/>
                                                                                </Path.RenderTransform>
                                                                                <Path.Style>
                                                                                    <Style TargetType="Path">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Trigger.EnterActions>
                                                                                                    <BeginStoryboard>
                                                                                                        <Storyboard>
                                                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                                                           To="1.1" Duration="0:0:0.2">
                                                                                                                <DoubleAnimation.EasingFunction>
                                                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                                                </DoubleAnimation.EasingFunction>
                                                                                                            </DoubleAnimation>
                                                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                                                           To="1.1" Duration="0:0:0.2">
                                                                                                                <DoubleAnimation.EasingFunction>
                                                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                                                </DoubleAnimation.EasingFunction>
                                                                                                            </DoubleAnimation>
                                                                                                        </Storyboard>
                                                                                                    </BeginStoryboard>
                                                                                                </Trigger.EnterActions>
                                                                                                <Trigger.ExitActions>
                                                                                                    <BeginStoryboard>
                                                                                                        <Storyboard>
                                                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                                                           To="1" Duration="0:0:0.2">
                                                                                                                <DoubleAnimation.EasingFunction>
                                                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                                                </DoubleAnimation.EasingFunction>
                                                                                                            </DoubleAnimation>
                                                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                                                           To="1" Duration="0:0:0.2">
                                                                                                                <DoubleAnimation.EasingFunction>
                                                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                                                </DoubleAnimation.EasingFunction>
                                                                                                            </DoubleAnimation>
                                                                                                        </Storyboard>
                                                                                                    </BeginStoryboard>
                                                                                                </Trigger.ExitActions>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Path.Style>
                                                                            </Path>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </Canvas>
                                                        </Viewbox>
                                                    </Grid>
                                                    
                                                    <!-- Dynamic Legend with values from PieChartData -->
                                                    <ItemsControl Grid.Column="1" ItemsSource="{Binding PieChartData}" 
                                                                  VerticalAlignment="Center" Margin="10,0,5,0">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" Margin="0,3" Cursor="Hand">
                                                                    <StackPanel.RenderTransform>
                                                                        <ScaleTransform CenterX="0" CenterY="0" ScaleX="1" ScaleY="1"/>
                                                                    </StackPanel.RenderTransform>
                                                                    <StackPanel.Style>
                                                                        <Style TargetType="StackPanel">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Trigger.EnterActions>
                                                                                        <BeginStoryboard>
                                                                                            <Storyboard>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                                               To="1.05" Duration="0:0:0.15">
                                                                                                    <DoubleAnimation.EasingFunction>
                                                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                                                    </DoubleAnimation.EasingFunction>
                                                                                                </DoubleAnimation>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                                               To="1.05" Duration="0:0:0.15">
                                                                                                    <DoubleAnimation.EasingFunction>
                                                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                                                    </DoubleAnimation.EasingFunction>
                                                                                                </DoubleAnimation>
                                                                                            </Storyboard>
                                                                                        </BeginStoryboard>
                                                                                    </Trigger.EnterActions>
                                                                                    <Trigger.ExitActions>
                                                                                        <BeginStoryboard>
                                                                                            <Storyboard>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                                                                               To="1" Duration="0:0:0.15">
                                                                                                    <DoubleAnimation.EasingFunction>
                                                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                                                    </DoubleAnimation.EasingFunction>
                                                                                                </DoubleAnimation>
                                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                                                                               To="1" Duration="0:0:0.15">
                                                                                                    <DoubleAnimation.EasingFunction>
                                                                                                        <CubicEase EasingMode="EaseOut"/>
                                                                                                    </DoubleAnimation.EasingFunction>
                                                                                                </DoubleAnimation>
                                                                                            </Storyboard>
                                                                                        </BeginStoryboard>
                                                                                    </Trigger.ExitActions>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </StackPanel.Style>
                                                                    <StackPanel.ToolTip>
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Label}" FontWeight="SemiBold"/>
                                                                            <TextBlock Text="{Binding Value, StringFormat=Value: {0:N0}}"/>
                                                                            <TextBlock Text="{Binding Percentage, StringFormat=Percentage: {0}}"/>
                                                                        </StackPanel>
                                                                    </StackPanel.ToolTip>
                                                                    <Rectangle Width="12" Height="12" RadiusX="2" RadiusY="2"
                                                                              Fill="{Binding Color}"/>
                                                                    <StackPanel Margin="6,0,0,0">
                                                                        <TextBlock Text="{Binding Label}" 
                                                                                   Foreground="{DynamicResource BodyForegroundBrush}" 
                                                                                   FontSize="10" FontWeight="SemiBold"/>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding Value, StringFormat={}{0:N0}}" 
                                                                                       Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                                            <TextBlock Text=" (" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                                            <TextBlock Text="{Binding Percentage}" 
                                                                                       Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                                            <TextBlock Text=")" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                                
                                                <!-- AREA CHART with axes and grid -->
                                                <Grid Visibility="{Binding ChartType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Area}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <!-- Y-Axis labels (dynamic) -->
                                                    <ItemsControl Grid.Column="0" Grid.Row="0" ItemsSource="{Binding YAxisLabels}" 
                                                                  VerticalAlignment="Stretch" Margin="0,0,5,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="5"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" Foreground="{DynamicResource SecondaryForegroundBrush}" 
                                                                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    
                                                    <!-- Chart area with grid lines - wrapped in Viewbox for responsive scaling -->
                                                    <Viewbox Grid.Column="1" Grid.Row="0" Stretch="Uniform" StretchDirection="Both" MaxHeight="180">
                                                        <Grid Width="280" Height="140" ClipToBounds="True">
                                                            <!-- Grid lines -->
                                                            <Canvas Width="280" Height="140">
                                                                <Line X1="0" Y1="0" X2="280" Y2="0" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="28" X2="280" Y2="28" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="56" X2="280" Y2="56" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="84" X2="280" Y2="84" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="112" X2="280" Y2="112" Stroke="{DynamicResource BorderBrush}" StrokeThickness="0.5" Opacity="0.3"/>
                                                                <Line X1="0" Y1="140" X2="280" Y2="140" Stroke="{DynamicResource BorderBrush}" StrokeThickness="1" Opacity="0.5"/>
                                                            </Canvas>
                                                        
                                                            <!-- Area chart -->
                                                            <Canvas Width="280" Height="140">
                                                                <!-- Area fill - data bound -->
                                                                <Path Data="{Binding ChartValues, Converter={StaticResource ValuesToAreaPathConverter}}"
                                                                      Fill="{Binding ChartColorBrush}" Opacity="0.3"/>
                                                                <!-- Area line - data bound -->
                                                                <Polyline Stroke="{Binding ChartColorBrush}" StrokeThickness="3" StrokeLineJoin="Round"
                                                                          Points="{Binding ChartValues, Converter={StaticResource ValuesToPointsConverter}}"/>
                                                                <!-- Data point dots with uniform chart color -->
                                                                <ItemsControl ItemsSource="{Binding ChartValues, Converter={StaticResource ValuesToDataPointsConverter}}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <Canvas/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemContainerStyle>
                                                                        <Style TargetType="ContentPresenter">
                                                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                                                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                                                        </Style>
                                                                    </ItemsControl.ItemContainerStyle>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Ellipse Width="10" Height="10" Margin="-5,-5,0,0"
                                                                                     Fill="{Binding DataContext.ChartColorBrush, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                                     Stroke="White" StrokeThickness="2"
                                                                                     Cursor="Hand" ToolTip="{Binding TooltipText}">
                                                                                <Ellipse.Effect>
                                                                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.3"/>
                                                                                </Ellipse.Effect>
                                                                                <Ellipse.Style>
                                                                                    <Style TargetType="Ellipse">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Width" Value="14"/>
                                                                                                <Setter Property="Height" Value="14"/>
                                                                                                <Setter Property="Margin" Value="-7,-7,0,0"/>
                                                                                                <Setter Property="Opacity" Value="0.8"/>
                                                                                                <Setter Property="Effect">
                                                                                                    <Setter.Value>
                                                                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                                                                                                    </Setter.Value>
                                                                                                </Setter>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Ellipse.Style>
                                                                            </Ellipse>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </Canvas>
                                                        </Grid>
                                                    </Viewbox>
                                                    
                                                    <!-- X-Axis labels -->
                                                    <ItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding ChartLabels}" 
                                                                  HorizontalAlignment="Stretch" Margin="20,4,20,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <UniformGrid Rows="1"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" TextAlignment="Center"
                                                                           Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            <!-- DataGridCard Template -->
                            <DataTemplate DataType="{x:Type viewModels:DataGridCardViewModel}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="8" Padding="12"
                                        MinWidth="400" MinHeight="200" MaxHeight="350"
                                        behaviors:ResizableBehavior.IsResizable="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <DockPanel Grid.Row="0">
                                            <Button DockPanel.Dock="Right" Padding="10,5" MinWidth="80"
                                                    Background="{DynamicResource SidebarHighlightBrush}" 
                                                    BorderThickness="0" Cursor="Hand"
                                                    Click="ExportButton_Click">
                                                <TextBlock Text="Export ▾" FontSize="11" FontWeight="SemiBold" 
                                                          Foreground="White"/>
                                                <Button.ContextMenu>
                                                    <ContextMenu Background="{DynamicResource CardBackgroundBrush}">
                                                        <MenuItem Header="Export to CSV" Command="{Binding ExportCsvCommand}"
                                                                  Foreground="{DynamicResource BodyForegroundBrush}"/>
                                                        <MenuItem Header="Export to TXT" Command="{Binding ExportTxtCommand}"
                                                                  Foreground="{DynamicResource BodyForegroundBrush}"/>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>
                                            <!-- Refresh Button -->
                                            <Button DockPanel.Dock="Right" Margin="0,0,8,0"
                                                    Command="{Binding RefreshCommand}"
                                                    Visibility="{Binding CanRefresh, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    ToolTip="Refresh data"
                                                    Style="{StaticResource RefreshButtonStyle}"
                                                    VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"/>
                                        </DockPanel>
                                        <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="10" Opacity="0.7"
                                                   Foreground="{DynamicResource BodyForegroundBrush}" Margin="0,2,0,4"/>
                                        <DataGrid Grid.Row="2" ItemsSource="{Binding DataSource}"
                                                  AutoGenerateColumns="True" IsReadOnly="True"
                                                  CanUserSortColumns="True"
                                                  Background="Transparent" BorderThickness="0"
                                                  GridLinesVisibility="Horizontal"
                                                  HorizontalGridLinesBrush="{DynamicResource BorderBrush}"
                                                  HeadersVisibility="Column"
                                                  RowHeaderWidth="0"
                                                  RowBackground="Transparent"
                                                  AlternatingRowBackground="{DynamicResource CardBackgroundBrush}"
                                                  Foreground="{DynamicResource BodyForegroundBrush}"
                                                  FontSize="11"
                                                  SelectionMode="Single"
                                                  SelectionUnit="FullRow"
                                                  Sorting="DataGrid_Sorting">
                                            <DataGrid.Resources>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Padding" Value="8,6"/>
                                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Style>
                                                <Style TargetType="DataGridRowHeader">
                                                    <Setter Property="Width" Value="0"/>
                                                </Style>
                                            </DataGrid.Resources>
                                        </DataGrid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            <!-- ScriptCard Template -->
                            <DataTemplate DataType="{x:Type viewModels:ScriptCardViewModel}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="8" Padding="16"
                                        MinWidth="220" MinHeight="180" Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="32" HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource SidebarHighlightBrush}" Margin="0,0,0,12"/>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextAlignment="Center"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.7"
                                                       TextAlignment="Center" TextWrapping="Wrap" Margin="0,4,0,0"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Row="2" Content="{Binding ActionLabel}"
                                                Command="{Binding OpenDialogCommand}"
                                                HorizontalAlignment="Center" Margin="0,12,0,0" Padding="16,6"
                                                Style="{StaticResource PrimaryButtonStyle}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            <!-- InfoCard Template - for displaying text, pictures, and canvas content -->
                            <DataTemplate DataType="{x:Type viewModels:InfoCardViewModel}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="8" Padding="0"
                                        MinWidth="250" MinHeight="200"
                                        behaviors:ResizableBehavior.IsResizable="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Image Area (Top alignment) -->
                                        <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True"
                                                Visibility="{Binding HasImage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Image Source="{Binding ImageSource}"
                                                   Height="{Binding ImageHeight}" Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Title and Icon -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,12,16,4">
                                            <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"
                                                       Foreground="{DynamicResource SidebarHighlightBrush}"
                                                       Visibility="{Binding HasIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14"
                                                           Foreground="{DynamicResource BodyForegroundBrush}" 
                                                           TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Opacity="0.7"
                                                           Foreground="{DynamicResource BodyForegroundBrush}" 
                                                           TextWrapping="Wrap" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Main Content Area -->
                                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,8,16,16">
                                            <TextBlock Text="{Binding Content}" 
                                                       FontSize="13" TextWrapping="Wrap"
                                                       Foreground="{DynamicResource BodyForegroundBrush}"
                                                       Visibility="{Binding HasContent, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            <!-- BannerViewModel Template - Full Featured with Interactive Support -->
                            <DataTemplate DataType="{x:Type viewModels:BannerViewModel}">
                                <Grid Margin="8" Cursor="{Binding ActualCursor}">
                                    <!-- Carousel Mode -->
                                    <Grid x:Name="CarouselContainer">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCarousel}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Current Slide with Navigation Arrows -->
                                        <Grid Grid.Row="0">
                                            <!-- Slide Content -->
                                            <Border x:Name="CarouselBorder" CornerRadius="12" Width="{Binding Width}" Height="{Binding Height}" ClipToBounds="True"
                                                    Background="{Binding CurrentSlide.BackgroundColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#2D2D30}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="3" BlurRadius="12" Opacity="0.2"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <!-- Text Content -->
                                                    <Grid Margin="32,24">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding CurrentSlide.IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="{Binding CurrentSlide.IconSize, FallbackValue=48}"
                                                                   Foreground="{Binding CurrentSlide.IconColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#FFFFFF}"
                                                                   VerticalAlignment="Center" Margin="0,0,24,0"/>
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding CurrentSlide.Title}" TextWrapping="Wrap"
                                                                       FontSize="{Binding CurrentSlide.TitleFontSize, FallbackValue=28}"
                                                                       FontWeight="{Binding CurrentSlide.TitleFontWeight, FallbackValue=SemiBold}"
                                                                       Foreground="White"/>
                                                            <TextBlock Text="{Binding CurrentSlide.Subtitle}" TextWrapping="Wrap" Margin="0,8,0,0"
                                                                       FontSize="{Binding CurrentSlide.SubtitleFontSize, FallbackValue=14}"
                                                                       Foreground="#B0B0B0"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Left hover zone with arrow - only visible on hover -->
                                                    <Border x:Name="LeftArrowZone" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="60" Background="Transparent">
                                                        <Button x:Name="LeftArrowBtn" VerticalAlignment="Center" Margin="8,0,0,0"
                                                                Width="36" Height="36" Cursor="Hand" Command="{Binding PreviousSlideCommand}"
                                                                Background="Transparent" BorderBrush="Transparent" Opacity="0">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border x:Name="ArrowBorder" Background="#60000000" CornerRadius="18" Width="36" Height="36">
                                                                                    <TextBlock Text="&#xE76B;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White"
                                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ArrowBorder" Property="Background" Value="#90000000"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding NavigationStyle}" Value="Arrows">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.Triggers>
                                                            <EventTrigger RoutedEvent="MouseEnter">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="LeftArrowBtn" Storyboard.TargetProperty="Opacity"
                                                                                         To="1" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="MouseLeave">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="LeftArrowBtn" Storyboard.TargetProperty="Opacity"
                                                                                         To="0" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Border.Triggers>
                                                    </Border>

                                                    <!-- Right hover zone with arrow - only visible on hover -->
                                                    <Border x:Name="RightArrowZone" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="60" Background="Transparent">
                                                        <Button x:Name="RightArrowBtn" VerticalAlignment="Center" Margin="0,0,8,0"
                                                                Width="36" Height="36" Cursor="Hand" Command="{Binding NextSlideCommand}"
                                                                Background="Transparent" BorderBrush="Transparent" Opacity="0">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border x:Name="ArrowBorder" Background="#60000000" CornerRadius="18" Width="36" Height="36">
                                                                                    <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White"
                                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="ArrowBorder" Property="Background" Value="#90000000"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding NavigationStyle}" Value="Arrows">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.Triggers>
                                                            <EventTrigger RoutedEvent="MouseEnter">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="RightArrowBtn" Storyboard.TargetProperty="Opacity"
                                                                                         To="1" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="MouseLeave">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="RightArrowBtn" Storyboard.TargetProperty="Opacity"
                                                                                         To="0" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Border.Triggers>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Navigation Dots (for Dots navigation style) -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NavigationStyle}" Value="Dots">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <ItemsControl ItemsSource="{Binding CarouselItems}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Ellipse Width="10" Height="10" Margin="4,0" Cursor="Hand" Fill="#60FFFFFF">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Opacity" Value="0.6"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Opacity" Value="1"/>
                                                                            <Setter Property="Fill" Value="White"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Single Banner Mode (non-carousel) - Full Featured -->
                                    <Border CornerRadius="{Binding CornerRadius}" ClipToBounds="True"
                                            Width="{Binding Width}" Height="{Binding Height}"
                                            Background="{Binding BackgroundColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#2D2D30}"
                                            BorderBrush="{Binding BorderColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=Transparent}"
                                            BorderThickness="{Binding BorderThickness}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCarousel}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.Effect>
                                            <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="{Binding ShadowDepth}"
                                                              BlurRadius="{Binding ShadowBlurRadius}" Opacity="{Binding ShadowOpacity}"/>
                                        </Border.Effect>
                                        <Grid>
                                            <!-- Gradient Background (if provided) -->
                                            <Border CornerRadius="{Binding CornerRadius}"
                                                    Visibility="{Binding GradientStart, Converter={StaticResource NotNullOrEmptyToVisibilityConverter}}">
                                                <Border.Background>
                                                    <MultiBinding Converter="{StaticResource GradientBrushConverter}">
                                                        <Binding Path="GradientStart"/>
                                                        <Binding Path="GradientEnd"/>
                                                        <Binding Path="GradientAngle"/>
                                                    </MultiBinding>
                                                </Border.Background>
                                            </Border>
                                            
                                            <!-- Background Image -->
                                            <Image Source="{Binding BackgroundImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                                   Stretch="{Binding BackgroundImageStretch, FallbackValue=Uniform}" 
                                                   Opacity="{Binding BackgroundImageOpacity}">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding BackgroundImagePath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <!-- Badge (Top Right by default) -->
                                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,12,0"
                                                    Background="{Binding BadgeColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#FF5722}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasBadge}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding BadgeText}" FontSize="11" FontWeight="Bold"
                                                           Foreground="{Binding BadgeTextColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=White}"/>
                                            </Border>

                                            <!-- Overlay Image (Logo) - Right Position -->
                                            <Image Source="{Binding OverlayImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                                   Width="{Binding OverlayImageSize}" Height="{Binding OverlayImageSize}"
                                                   Opacity="{Binding OverlayImageOpacity}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,24,0"
                                                   Stretch="Uniform">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding HasOverlayImage}" Value="True"/>
                                                                    <Condition Binding="{Binding IsOverlayRight}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <!-- Overlay Image (Logo) - Left Position -->
                                            <Image Source="{Binding OverlayImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                                   Width="{Binding OverlayImageSize}" Height="{Binding OverlayImageSize}"
                                                   Opacity="{Binding OverlayImageOpacity}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="24,0,0,0"
                                                   Stretch="Uniform">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding HasOverlayImage}" Value="True"/>
                                                                    <Condition Binding="{Binding IsOverlayLeft}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <!-- Overlay Image (Logo) - Center Position -->
                                            <Image Source="{Binding OverlayImagePath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                                   Width="{Binding OverlayImageSize}" Height="{Binding OverlayImageSize}"
                                                   Opacity="{Binding OverlayImageOpacity}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Stretch="Uniform">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding HasOverlayImage}" Value="True"/>
                                                                    <Condition Binding="{Binding IsOverlayCenter}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>

                                            <!-- Main Content -->
                                            <Grid Margin="32,24">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Left Icon -->
                                                <TextBlock Grid.Column="0" Text="{Binding IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                                           FontSize="{Binding IconSize}"
                                                           Foreground="{Binding IconColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#80FFFFFF}"
                                                           VerticalAlignment="Center" Margin="0,0,24,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsIconLeft}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <!-- Text Content -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DisplayTitle}" TextWrapping="Wrap"
                                                               FontSize="{Binding TitleFontSize}" FontWeight="{Binding TitleFontWeight}"
                                                               Foreground="{Binding TitleColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=White}"/>
                                                    <TextBlock Text="{Binding Subtitle}" TextWrapping="Wrap" Margin="0,8,0,0"
                                                               FontSize="{Binding SubtitleFontSize}" FontWeight="{Binding SubtitleFontWeight}"
                                                               Foreground="{Binding SubtitleColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#B0B0B0}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Subtitle, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!-- Button (when HasButton) -->
                                                    <Button Margin="0,16,0,0" Padding="16,8" HorizontalAlignment="Left" Cursor="Hand"
                                                            Command="{Binding ButtonClickCommand}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border x:Name="ButtonBorder" CornerRadius="4" Padding="{TemplateBinding Padding}"
                                                                                    Background="{Binding ButtonColor, Converter={StaticResource StringToBrushConverter}}">
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock Text="{Binding ButtonIcon}" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                                                               Foreground="{Binding ButtonTextColor, Converter={StaticResource StringToBrushConverter}}"
                                                                                               VerticalAlignment="Center" Margin="0,0,8,0">
                                                                                        <TextBlock.Style>
                                                                                            <Style TargetType="TextBlock">
                                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                                <Style.Triggers>
                                                                                                    <DataTrigger Binding="{Binding ButtonIcon, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                                    </DataTrigger>
                                                                                                </Style.Triggers>
                                                                                            </Style>
                                                                                        </TextBlock.Style>
                                                                                    </TextBlock>
                                                                                    <TextBlock Text="{Binding ButtonText}" FontSize="13" FontWeight="SemiBold"
                                                                                               Foreground="{Binding ButtonTextColor, Converter={StaticResource StringToBrushConverter}}"/>
                                                                                </StackPanel>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasButton}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>

                                                <!-- Right Icon -->
                                                <TextBlock Grid.Column="2" Text="{Binding IconGlyph}" FontFamily="Segoe MDL2 Assets"
                                                           FontSize="{Binding IconSize}"
                                                           Foreground="{Binding IconColor, Converter={StaticResource StringToBrushConverter}, FallbackValue=#40FFFFFF}"
                                                           VerticalAlignment="Center" Margin="24,0,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding IsIconRight}" Value="True"/>
                                                                        <Condition Binding="{Binding IconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.Resources>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </DataTemplate>

        <!-- DataTemplate for Execution Console View -->
        <DataTemplate DataType="{x:Type viewModels:ExecutionConsoleViewModel}">
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsCardGridMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding DataContext.IsMultiPageCardGridMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Actions (right-aligned, no header text) -->
                <DockPanel Grid.Row="0" Margin="0,0,8,10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                                IsEnabled="{Binding IsRunning}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="100"
                                Margin="0,0,8,0"/>
                        <Button Content="Open Log" Command="{Binding OpenLogCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="100"
                                Margin="0,0,8,0"/>
                    </StackPanel>
                </DockPanel>

                <!-- Console List -->
                <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Background="{DynamicResource CardBackgroundBrush}">
                    <Border.Effect>
                        <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="1" BlurRadius="6" Opacity="0.12"/>
                    </Border.Effect>
                    <ListBox ItemsSource="{Binding Lines}" 
                             FontFamily="Consolas, Global Monospace"
                             FontSize="{DynamicResource FontSizeMonospace}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             controls:AutoScrollBehavior.EnableAutoScroll="True">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding Foreground}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="HOST">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="OUTPUT">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="">
                                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Status / Footer (no extra Close button here) -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource BodyForegroundBrush}"/>
                    <TextBlock Foreground="{DynamicResource BodyForegroundBrush}">
                        <Run Text="Log: "/><Run Text="{Binding LogFilePath}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>  <!-- Custom Title Bar -->
            <RowDefinition Height="*"/>   <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{DynamicResource TitleBarBackgroundBrush}"
                BorderBrush="{DynamicResource TitleBarBorderBrush}"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>   <!-- Icon + Title -->
                    <ColumnDefinition Width="*"/>      <!-- Left filler -->
                    <ColumnDefinition Width="Auto"/>   <!-- Category Filter -->
                    <ColumnDefinition Width="*"/>      <!-- Right filler -->
                    <ColumnDefinition Width="Auto"/>   <!-- Theme Toggle -->
                    <ColumnDefinition Width="Auto"/>   <!-- Window buttons -->
                </Grid.ColumnDefinitions>

                <!-- Left: Icon + Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Image Source="{Binding WindowTitleIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                           Width="16" Height="16" Margin="0,0,8,0"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WindowTitleIconPath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Text="{Binding WindowTitle}"
                               FontSize="13"
                               Foreground="{DynamicResource TitleBarTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Center: Category Filter (only visible on CardGrid) -->
                <Border Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1" CornerRadius="4"
                        Padding="4,2"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPage, Converter={StaticResource ObjectTypeConverter}}" Value="CardGridViewModel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                   Foreground="{DynamicResource BodyForegroundBrush}" Opacity="0.6"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox ItemsSource="{Binding CurrentPage.Categories}"
                                  SelectedItem="{Binding CurrentPage.SelectedCategory}"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  MinWidth="200"
                                  ToolTip="Filter cards by category (type to search)">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="20"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="PART_EditableTextBox"
                                                             Grid.Column="0"
                                                             Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{DynamicResource BodyForegroundBrush}"
                                                             CaretBrush="{DynamicResource BodyForegroundBrush}"
                                                             FontSize="11"
                                                             VerticalAlignment="Center"
                                                             Padding="0"
                                                             IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                    <ToggleButton Grid.Column="1"
                                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                                  Background="Transparent"
                                                                  BorderThickness="0"
                                                                  Focusable="False"
                                                                  ClickMode="Press">
                                                        <Path Data="M0,0 L4,4 L8,0" 
                                                              Stroke="{DynamicResource BodyForegroundBrush}" 
                                                              StrokeThickness="1.5"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </ToggleButton>
                                                    <Popup x:Name="PART_Popup"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Border Background="{DynamicResource CardBackgroundBrush}"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="4"
                                                                MaxHeight="200"
                                                                MinWidth="{TemplateBinding ActualWidth}">
                                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource BodyForegroundBrush}"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Theme Toggle -->
                <ToggleButton Grid.Column="4" x:Name="TitleBarThemeToggle"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Width="32" Height="32"
                              Style="{StaticResource TitleBarIconButtonStyle}"
                              ToolTip="Toggle theme"
                              WindowChrome.IsHitTestVisibleInChrome="True"
                              Checked="ThemeToggle_Checked" Unchecked="ThemeToggle_Unchecked">
                    <Grid>
                        <!-- Sun icon (light mode - shown when dark theme is active) -->
                        <TextBlock Text="&#xE706;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <!-- Moon icon (dark mode - shown when light theme is active) -->
                        <TextBlock Text="&#xE708;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ToggleButton>

                <!-- Right: Window Control Buttons -->
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <!-- Minimize -->
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>

                    <!-- Maximize/Restore -->
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="MaximizeButton_Click"
                            ToolTip="Maximize"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock x:Name="MaximizeIcon" Text="&#xE922;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>

                    <!-- Close -->
                    <Button Style="{StaticResource TitleBarCloseButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="Close"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{DynamicResource SidebarBackgroundBrush}"
                        x:Name="SidebarBorder">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Width" Value="280"/>
                            <Setter Property="Padding" Value="16,20"/>
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                    <Setter Property="Padding" Value="4,8,4,8"/>
                                    <Setter Property="Width" Value="60"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSidebarHidden}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Width" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Branding Section - hidden when sidebar is collapsed -->
                <Border Background="{DynamicResource SidebarBackgroundBrush}"
                        BorderThickness="0"
                        Padding="12,12"
                        Margin="0,0,0,12"
                        MinHeight="60"
                        CornerRadius="12,12,12,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Grid HorizontalAlignment="Center" x:Name="SidebarBrandingLayout">
                        <Grid.Resources>
                            <Style x:Key="BrandingIconImageStyle" TargetType="Image">
                                <Setter Property="Width" Value="110"/>
                                <Setter Property="Height" Value="110"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Stretch" Value="Uniform"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SidebarHeaderIconPath, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True"/>
                                            <Condition Binding="{Binding SidebarHeaderIconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                    <DataTrigger Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style x:Key="BrandingIconGlyphStyle" TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                <Setter Property="FontSize" Value="28"/>
                                <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarHeaderIconGlyph, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SidebarHeaderText, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                        <Setter Property="FontSize" Value="42"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                            <Style x:Key="BrandingHeaderTextStyle" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="MaxWidth" Value="220"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SidebarHeaderText, Converter={StaticResource NullOrEmptyToFalseConverter}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <!-- Hide when sidebar is collapsed -->
                                    <DataTrigger Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>

                        <!-- Left (default) layout -->
                        <StackPanel x:Name="BrandingLeftLayout"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Right">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Top">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Bottom">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid Margin="0,0,12,0">
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       TextAlignment="Left"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                        </StackPanel>

                        <!-- Right layout -->
                        <StackPanel x:Name="BrandingRightLayout"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Right">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       Margin="0,0,12,0"
                                       TextAlignment="Right"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                            <Grid>
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Top layout -->
                        <StackPanel x:Name="BrandingTopLayout"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Top">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid Margin="0,0,0,8">
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       TextAlignment="Center"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                        </StackPanel>

                        <!-- Bottom layout -->
                        <StackPanel x:Name="BrandingBottomLayout"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SidebarHeaderIconOrientation}" Value="Bottom">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Style="{StaticResource BrandingHeaderTextStyle}"
                                       Margin="0,0,0,8"
                                       TextAlignment="Center"
                                       Text="{Binding SidebarHeaderText}"
                                       ToolTip="{Binding SidebarHeaderText}"/>
                            <Grid>
                                <Image Style="{StaticResource BrandingIconImageStyle}"
                                       Source="{Binding SidebarHeaderIconPath, Converter={StaticResource FilePathToImageSourceConverter}}"
                                       ToolTip="{Binding SidebarHeaderIconPath}"/>
                                <TextBlock Style="{StaticResource BrandingIconGlyphStyle}" Text="{Binding SidebarHeaderIconGlyph}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Subtle divider line -->
                <Rectangle Height="1" 
                          Fill="{DynamicResource BorderBrush}" 
                          Opacity="0.2"
                          Margin="0,0,0,16"/>

                <!-- Steps Section -->
                <Border Background="{DynamicResource SidebarBackgroundBrush}"
                        BorderThickness="0"
                        x:Name="StepsSection">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Padding" Value="20,16"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                    <Setter Property="Padding" Value="8,16"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Each step container - wrapped in Button for navigation -->
                            <Button Command="{Binding NavigateCommand}" 
                                    Background="Transparent" BorderThickness="0" Padding="0" Margin="0"
                                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" x:Name="StepBorder" CornerRadius="6">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="StepBorder" Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>   <!-- Circle + Icon column -->
                                    <ColumnDefinition Width="*"/>      <!-- Text column -->
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>  <!-- Step content -->
                                    <RowDefinition Height="*"/>     <!-- Connector line -->
                                </Grid.RowDefinitions>

                                <!-- Step circle and icon container -->
                                <StackPanel Grid.Column="0" Grid.Row="0" 
                                            Orientation="Horizontal"
                                            Margin="0,8,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    
                                    <!-- Circle with number/checkmark - hidden in CardGrid mode -->
                                    <Grid Width="32" Height="32" Margin="0"
                                          Visibility="{Binding DataContext.ShowStepNumbers, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <!-- Icon background circle -->
                                        <Ellipse Width="24" Height="24">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{DynamicResource SidebarBackgroundBrush}"/>
                                                <Setter Property="Stroke" Value="{DynamicResource BorderBrush}"/>
                                                <Setter Property="StrokeThickness" Value="2"/>
                                                <Style.Triggers>
                                                    <!-- Completed: Green background -->
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Fill" Value="#107C10"/>
                                                        <Setter Property="Stroke" Value="#107C10"/>
                                                    </DataTrigger>
                                                    <!-- Current: Blue background -->
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Fill" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                        <Setter Property="Stroke" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                    </DataTrigger>
                                                    <!-- Current + Valid: Green background -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Fill" Value="#107C10"/>
                                                        <Setter Property="Stroke" Value="#107C10"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    
                                    <!-- Completed: Checkmark (only when NOT current) -->
                                    <TextBlock Text="&#xE73E;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="14"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <!-- Show when completed AND not current -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCompleted}" Value="True"/>
                                                            <Condition Binding="{Binding IsCurrent}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Current: Step number (when invalid) -->
                                    <TextBlock Text="{Binding StepNumber}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               FontFamily="Segoe UI"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="False"/>
                                                            <Condition Binding="{Binding DataContext.ShowStepNumbers, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Current: White checkmark on green circle (when valid) -->
                                    <TextBlock Text="&#xE73E;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="True"/>
                                                            <Condition Binding="{Binding IsValid}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Upcoming: Step number (gray) -->
                                    <TextBlock Text="{Binding StepNumber}"
                                               FontSize="12"
                                               Foreground="{DynamicResource SidebarTextBrush}"
                                               Opacity="0.5"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsCurrent}" Value="False"/>
                                                            <Condition Binding="{Binding IsCompleted}" Value="False"/>
                                                            <Condition Binding="{Binding DataContext.ShowStepNumbers, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    </Grid>
                                    
                                    <!-- Step Icon with Glow Effect -->
                                    <Grid Width="28" Height="28" Margin="0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasIconGlyph}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <!-- Soft glow ellipse behind icon when current -->
                                        <Ellipse Width="24" Height="24" Fill="{DynamicResource SidebarHighlightBrush}" Opacity="0"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                            <Setter Property="Opacity" Value="0.25"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <!-- Icon glyph -->
                                        <TextBlock Text="{Binding IconGlyph}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                    <Style.Triggers>
                                                        <!-- Current: Glow with accent color -->
                                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                            <Setter Property="Opacity" Value="1.0"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                        </DataTrigger>
                                                        <!-- Completed: Green -->
                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                            <Setter Property="Opacity" Value="1"/>
                                                            <Setter Property="Foreground" Value="#107C10"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>

                                <!-- Step text -->
                                <Border Grid.Column="1" Grid.Row="0" 
                                        Padding="12,8" 
                                        Margin="0,8,0,0"
                                        CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <!-- Hide when sidebar is collapsed -->
                                                <DataTrigger Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <TextBlock Text="{Binding Title}" 
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Title}"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Opacity" Value="0.8"/>
                                                <Style.Triggers>
                                                    <!-- Current: Bold with accent color -->
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource SidebarHighlightBrush}"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                    <!-- Completed: SemiBold -->
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </Border>
            </StackPanel>
            </ScrollViewer>
            
            <!-- Hamburger Menu Button - Collapse/Expand Sidebar -->
            <Button Grid.Row="1"
                    x:Name="ToggleSidebarButton"
                    Click="ToggleSidebarButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="12,8"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"
                    ToolTip="Collapse/Expand Sidebar">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,8,0,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource IconButtonHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <!-- Hamburger Menu Icon -->
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="18"
                           Foreground="{DynamicResource SidebarTextBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="&#xE700;"/>
            </Button>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="{DynamicResource ContentBackgroundBrush}" x:Name="ContentGrid">
            <Grid.RowDefinitions>
                 <RowDefinition Height="*"/>
                 <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content Area - Full height for scrolling -->
            <ContentControl Grid.Row="0" Content="{Binding CurrentPage}" Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="40,20"
                    Visibility="{Binding ShowNavigationButtons, Converter={StaticResource BooleanToVisibilityConverter}}">
                 <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PrevButton" Content="Previous"
                            Command="{Binding PreviousCommand}"
                            IsEnabled="{Binding CanGoBack}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="100"
                            Margin="0,0,10,0" Click="PrevButton_Click"/>
                    <Button x:Name="NextButton" Content="{Binding NextButtonText}"
                            Command="{Binding NextCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            MinWidth="100"
                            Click="NextButton_Click"/>
                 </StackPanel>
            </Border>
        </Grid>
        
        <!-- Progress Overlay for slow operations -->
        <controls:ProgressOverlay Grid.ColumnSpan="2" 
                                  Panel.ZIndex="1000"
                                  ShowOverlay="{Binding IsProcessing}"
                                  Message="{Binding ProcessingMessage}"/>
        </Grid>
    </Grid>
</Window>