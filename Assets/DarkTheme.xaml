<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundColor">#FF202020</Color>
    <Color x:Key="ForegroundColor">#FFFFFFFF</Color>
    <Color x:Key="AccentColor">#FF0078D4</Color>
    <Color x:Key="BorderColor">#FF404040</Color>

    <!-- Font sizes (normal scale) -->
    <system:Double x:Key="FontSizeBase">12</system:Double>
    <system:Double x:Key="FontSizeBody">14</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeLabel">13</system:Double>
    <system:Double x:Key="FontSizeButton">14</system:Double>
    <system:Double x:Key="FontSizeSubheading">16</system:Double>
    <system:Double x:Key="FontSizeHeading">20</system:Double>
    <system:Double x:Key="FontSizeHero">28</system:Double>
    <system:Double x:Key="FontSizeMonospace">12</system:Double>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <!-- Inputs: translucent surface over content background (Fluent acrylic-like) -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#1AFFFFFF"/>

    <!-- THEME: Dark brushes used by MainWindow -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#121212"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="#D6D6D6"/>
    <SolidColorBrush x:Key="SidebarHighlightBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#1E1E1E"/>
    <!-- Use the global BorderBrush defined above from BorderColor -->

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#373737"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#454545"/>
    <!-- Disabled state brush to keep text brightness uniform -->
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#353535"/>

    <SolidColorBrush x:Key="HeadingForegroundBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="BodyForegroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="ChartBackgroundBrush" Color="#0F0F0F"/>

    <!-- Subtle overlays for icon-only buttons (dark theme) -->
    <SolidColorBrush x:Key="IconButtonHoverBrush" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="IconButtonCheckedBrush" Color="#55FFFFFF"/>

    <!-- Disabled input background for dark theme -->
    <SolidColorBrush x:Key="TextBoxDisabledBackgroundBrush" Color="#0DFFFFFF"/>

    <!-- Control Styles -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF1084E4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF303030"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    </Style>

    <!-- ToolTip - Dark Theme -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="#2D2D30"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#3F3F46"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Title Bar - Dark Theme -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TitleBarBorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="TitleBarButtonHoverBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="TitleBarButtonPressedBrush" Color="#2D2D30"/>
    
    <!-- Dialog Title Bar - Dark Theme -->
    <SolidColorBrush x:Key="DialogTitleBarBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DialogTitleBarForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DialogTitleBarHoverBrush" Color="#3F3F46"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════
         WORKFLOW VIEW SPECIFIC STYLES (Dark Theme)
         Enhanced styling for task lists, progress bars, and workflow cards
         ═══════════════════════════════════════════════════════════════════════════ -->
    
    <!-- ═══ WORKFLOW COLOR PALETTE (Dark Theme) ═══ -->
    <!-- Task card backgrounds - subtle elevation via lighter surface -->
    <SolidColorBrush x:Key="WorkflowCardBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="WorkflowCardBorderBrush" Color="#3E3E42"/>
    
    <!-- Alternating task row backgrounds for visual hierarchy -->
    <SolidColorBrush x:Key="TaskAlternateBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TaskHoverBackgroundBrush" Color="#333337"/>
    
    <!-- Progress bar colors - accent blue on dark background -->
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ProgressForegroundBrush" Color="#0078D4"/>
    
    <!-- Active task accent (left border indicator) -->
    <SolidColorBrush x:Key="TaskActiveAccentBrush" Color="#4FC3F7"/>
    <SolidColorBrush x:Key="TaskSuccessAccentBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="TaskErrorAccentBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="TaskPendingAccentBrush" Color="#6B7280"/>
    
    <!-- Timeline connector colors -->
    <SolidColorBrush x:Key="TimelineConnectorBrush" Color="#404040"/>
    <SolidColorBrush x:Key="TimelineCircleBackgroundBrush" Color="#1E1E1E"/>
    
    <!-- Title text for workflow view -->
    <SolidColorBrush x:Key="TitleForegroundBrush" Color="#F3F4F6"/>
    
    <!-- ═══ WORKFLOW CARD SHADOW (Dark Theme - Subtle) ═══ -->
    <!-- Minimal shadow in dark theme - depth achieved via surface color -->
    <DropShadowEffect x:Key="WorkflowCardShadow" 
                      Color="#000000" 
                      Direction="270" 
                      ShadowDepth="1" 
                      BlurRadius="4" 
                      Opacity="0.3"/>
    
    <!-- Elevated shadow for hover/active states -->
    <DropShadowEffect x:Key="WorkflowCardShadowHover" 
                      Color="#000000" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="8" 
                      Opacity="0.4"/>
    
    <!-- Progress bar glow effect - more prominent in dark theme -->
    <DropShadowEffect x:Key="ProgressGlowEffect" 
                      Color="#0078D4" 
                      Direction="0" 
                      ShadowDepth="0" 
                      BlurRadius="10" 
                      Opacity="0.5"/>
    
    <!-- ═══ WORKFLOW TASK CARD STYLE ═══ -->
    <!-- Style for task cards with subtle border emphasis -->
    <Style x:Key="WorkflowTaskCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WorkflowCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource WorkflowCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="8,4,0,8"/>
        <Setter Property="Effect" Value="{StaticResource WorkflowCardShadow}"/>
    </Style>
    
    <!-- ═══ WORKFLOW PROGRESS BAR STYLE ═══ -->
    <!-- Custom progress bar with rounded corners -->
    <Style x:Key="WorkflowProgressBarStyle" TargetType="Border">
        <Setter Property="Height" Value="6"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Background" Value="{StaticResource ProgressBackgroundBrush}"/>
    </Style>
    
    <!-- Progress bar fill -->
    <Style x:Key="WorkflowProgressFillStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Background" Value="{StaticResource ProgressForegroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <!-- ═══ OVERALL PROGRESS BAR STYLE (Prominent) ═══ -->
    <Style x:Key="WorkflowOverallProgressStyle" TargetType="Border">
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="{StaticResource ProgressBackgroundBrush}"/>
    </Style>
    
    <!-- ═══ TASK STATUS ICON CIRCLE STYLE ═══ -->
    <Style x:Key="TaskStatusCircleStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Fill" Value="{StaticResource TimelineCircleBackgroundBrush}"/>
    </Style>
    
    <!-- ═══ OUTPUT LOG PANEL STYLE ═══ -->
    <!-- Console-style output area - darker surface in dark theme -->
    <SolidColorBrush x:Key="OutputLogBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="OutputLogBorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="OutputLogTextBrush" Color="#CCCCCC"/>
    
    <!-- ═══ APPROVAL GATE STYLING ═══ -->
    <!-- Approval pending state colors - amber tones for dark theme -->
    <SolidColorBrush x:Key="ApprovalPendingBackgroundBrush" Color="#3D3520"/>
    <SolidColorBrush x:Key="ApprovalPendingBorderBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="ApprovalPendingTextBrush" Color="#FFB74D"/>
    
    <!-- ═══ REBOOT PENDING BANNER (Dark Theme) ═══ -->
    <SolidColorBrush x:Key="RebootBannerBackgroundBrush" Color="#2D3A4A"/>
    <SolidColorBrush x:Key="RebootBannerBorderBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="RebootBannerIconBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="RebootBannerTextBrush" Color="#FFB74D"/>
</ResourceDictionary> 